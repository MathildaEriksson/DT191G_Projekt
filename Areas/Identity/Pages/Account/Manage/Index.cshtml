@page
@model IndexModel
@{
    ViewData["Title"] = "Profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3 class="text-base font-semibold leading-7 text-gray-900 mt-4 mb-2">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="flex flex-wrap ">
    <div class="md:w-1/2 pr-4 pl-4">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-600" role="alert"></div>
            <div class="form-floating mb-3">
                <label asp-for="Username" class="block text-sm font-medium leading-6 text-gray-900">Användarnamn</label>
                <input asp-for="Username" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-royalBlue sm:text-sm sm:leading-6" placeholder="Vänligen välj ditt användarnamn" disabled />                
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.Name" class="block text-sm font-medium leading-6 text-gray-900">Name</label>
                <input asp-for="Input.Name" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-royalBlue sm:text-sm sm:leading-6" placeholder="Namn" />
                <span asp-validation-for="Input.Name" class="text-red-600"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.PhoneNumber" class="block text-sm font-medium leading-6 text-gray-900">Telefonnummer</label>
                <input asp-for="Input.PhoneNumber" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-royalBlue sm:text-sm sm:leading-6" placeholder="Vänligen ange ditt telefonnummer" />                
                <span asp-validation-for="Input.PhoneNumber" class="text-red-600"></span>
            </div>
            <button id="update-profile-button" type="submit"class="flex w-full justify-center rounded-md bg-green-700 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-green-600 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-600">Spara</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
