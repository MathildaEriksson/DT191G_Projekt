@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<ul class="flex flex-wrap list-none pl-0 mb-0  flex-col">
    <li class=""><a class="inline-block py-2 px-4 no-underline border border-blue bg-blue rounded text-white mx-1 @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">Profile</a></li>
    <li class=""><a class="inline-block py-2 px-4 no-underline border border-blue bg-blue rounded text-white mx-1 @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">Email</a></li>
    <li class=""><a class="inline-block py-2 px-4 no-underline border border-blue bg-blue rounded text-white mx-1 @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">Password</a></li>
    @if (hasExternalLogins)
    {
        <li id="external-logins" class=""><a id="external-login" class="inline-block py-2 px-4 no-underline border border-blue bg-blue rounded text-white mx-1 @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins">External logins</a></li>
    }
    <li class=""><a class="inline-block py-2 px-4 no-underline border border-blue bg-blue rounded text-white mx-1 @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" id="two-factor" asp-page="./TwoFactorAuthentication">Two-factor authentication</a></li>
    <li class=""><a class="inline-block py-2 px-4 no-underline border border-blue bg-blue rounded text-white mx-1 @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">Personal data</a></li>
</ul>
