@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Glömt ditt lösenord?";
}

<div class="flex flex-wrap mt-6">
    <div class="md:w-1/3 pr-4 pl-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-600" role="alert"></div>
            <div class="form-floating mb-3">
                <label asp-for="Input.Email" class="block text-sm font-medium leading-6 text-gray-900">E-post</label>
                <input asp-for="Input.Email" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-royalBlue sm:text-sm sm:leading-6" autocomplete="username" aria-required="true" placeholder="name@example.com" />                
                <span asp-validation-for="Input.Email" class="text-red-600"></span>
            </div>
            <button type="submit" class="flex w-full justify-center rounded-md bg-green-700 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-green-600 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-600">Återställ lösenord</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
