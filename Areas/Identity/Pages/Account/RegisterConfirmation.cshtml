@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Registreringsbekräftelse";
}

@{
    if (@Model.DisplayConfirmAccountLink)
    {
<p>
    Denna app har för närvarande ingen riktig e-postsändare registrerad, se <a href="https://aka.ms/aspaccountconf">dokumentationen</a> för hur du konfigurerar en riktig e-postsändare.
    Normalt skulle detta skickas via e-post: <a id="confirm-link" href="@Model.EmailConfirmationUrl" class="font-semibold text-base text-blue-700 hover:text-blue-500">Klicka här för att bekräfta ditt konto</a>
</p>
    }
    else
    {
<p>
        Please check your email to confirm your account.
</p>
    }
}

