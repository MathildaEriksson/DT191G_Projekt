@model EquiMarketApp.Models.Ad

@{
    ViewData["Title"] = "Create";
}

@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    var isUserAdmin = User.IsInRole("Admin");
}

<h1>Create</h1>

<h4>Ad</h4>
<hr />
<div class="flex flex-wrap ">
    <div class="md:w-1/3 pr-4 pl-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-red-600"></div>
            <div class="mb-4">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="block appearance-none w-full py-1 px-2 mb-1 text-base leading-normal bg-white text-gray-800 border border-gray-200 rounded" />
                <span asp-validation-for="Title" class="text-red-600"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="block appearance-none w-full py-1 px-2 mb-1 text-base leading-normal bg-white text-gray-800 border border-gray-200 rounded" />
                <span asp-validation-for="Description" class="text-red-600"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="block appearance-none w-full py-1 px-2 mb-1 text-base leading-normal bg-white text-gray-800 border border-gray-200 rounded" type="number" />
                <span asp-validation-for="Price" class="text-red-600"></span>
            </div>
            <div class="mb-4">
                <label asp-for="BirthYear" class="control-label"></label>
                <input asp-for="BirthYear" class="block appearance-none w-full py-1 px-2 mb-1 text-base leading-normal bg-white text-gray-800 border border-gray-200 rounded" type="number" />
                <span asp-validation-for="BirthYear" class="text-red-600"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Height" class="control-label"></label>
                <input asp-for="Height" class="block appearance-none w-full py-1 px-2 mb-1 text-base leading-normal bg-white text-gray-800 border border-gray-200 rounded" />
                <span asp-validation-for="Height" class="text-red-600"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="block appearance-none w-full py-1 px-2 mb-1 text-base leading-normal bg-white text-gray-800 border border-gray-200 rounded" />
                <span asp-validation-for="Name" class="text-red-600"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender" class="block appearance-none w-full py-1 px-2 mb-1 text-base leading-normal bg-white text-gray-800 border border-gray-200 rounded" asp-items="Html.GetEnumSelectList<Gender>()"></select>
                <span asp-validation-for="Gender" class="text-red-600"></span>
            </div>
            @if (isUserAdmin)
            {
                <div class="mb-4 relative block mb-2">
                    <label class="text-gray-700 pl-6 mb-0">
                        <input class="absolute mt-1 -ml-6" asp-for="IsApproved" /> @Html.DisplayNameFor(model =>
                    model.IsApproved)
                    </label>
                </div>
            }
            <div class="mb-4">
                <label asp-for="BreedId" class="control-label"></label>
                <select asp-for="BreedId" class="block appearance-none w-full py-1 px-2 mb-1 text-base leading-normal bg-white text-gray-800 border border-gray-200 rounded" asp-items="ViewBag.BreedId"></select>
            </div>
            <div class="mb-4">
                <label asp-for="OriginId" class="control-label"></label>
                <select asp-for="OriginId" class="block appearance-none w-full py-1 px-2 mb-1 text-base leading-normal bg-white text-gray-800 border border-gray-200 rounded" asp-items="ViewBag.OriginId"></select>
            </div>
            <div class="mb-4">
                <label asp-for="AdTypeId" class="control-label"></label>
                <select asp-for="AdTypeId" class="block appearance-none w-full py-1 px-2 mb-1 text-base leading-normal bg-white text-gray-800 border border-gray-200 rounded" asp-items="ViewBag.AdTypeId"></select>
            </div>
            <div class="mb-4">
                <label asp-for="Location.CountyId" class="control-label">County</label>
                <select asp-for="Location.CountyId" class="block appearance-none w-full py-1 px-2 mb-1 text-base leading-normal bg-white text-gray-800 border border-gray-200 rounded" asp-items="ViewBag.CountyId"
                    id="countyDropdown">
                    <option value="">Välj ett län</option>
                </select>
            </div>
            <div class="mb-4">
                <label asp-for="CityId" class="control-label">City</label>
                <select asp-for="CityId" class="block appearance-none w-full py-1 px-2 mb-1 text-base leading-normal bg-white text-gray-800 border border-gray-200 rounded" id="cityDropdown">
                    <option value="">Välj en stad</option>
                </select>
            </div>
            <div class="mb-4">
                <label for="images">Bilder</label>
                <input type="file" name="images" class="block appearance-none w-full py-1 px-2 mb-1 text-base leading-normal bg-white text-gray-800 border border-gray-200 rounded" multiple accept="image/*" />
            </div>
            <div class="mb-4">
                <input type="submit" value="Create" class="inline-block align-middle text-center select-none border font-normal whitespace-no-wrap rounded py-1 px-3 leading-normal no-underline bg-blue-600 text-white hover:bg-blue-600" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Fetches cities based on the selected county and populates the city dropdown dynamically
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelector('#countyDropdown').addEventListener('change', function () {
                var countyId = this.value;
                var url = '@Url.Action("GetCitiesByCountyId", "Ad")';

                fetch(url + '?countyId=' + countyId)
                    .then(response => response.json())
                    .then(data => {
                        var citySelect = document.querySelector('#cityDropdown');
                        citySelect.innerHTML = '<option value="">Select a city</option>';

                        data.forEach(function (city) {
                            var option = new Option(city.name, city.cityId);
                            citySelect.add(option);
                        });
                    });
            });
        });
    </script>
}
