@model IEnumerable<EquiMarketApp.Models.County>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@if (TempData["ErrorMessage"] != null)
{
    <div class="relative px-3 py-3 mb-4 border rounded bg-red-200 border-red-300 text-red-800">
        @TempData["ErrorMessage"]
    </div>
}

<table class="w-full max-w-full mb-4 bg-transparent">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CountyId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CountyId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CountyId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
