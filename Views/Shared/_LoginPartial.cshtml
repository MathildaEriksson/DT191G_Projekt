@using Microsoft.AspNetCore.Identity
@using EquiMarketApp.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="flex flex-wrap list-reset pl-0 mb-0">
@if (SignInManager.IsSignedIn(User))
{
    <li class="">
        <a  class="inline-block py-2 px-4 no-underline text-gray-900" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="">
        <form  class="flex items-center" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="inline-block py-2 px-4 no-underline inline-block align-middle text-center select-none border font-normal whitespace-no-wrap rounded py-1 px-3 leading-normal no-underline font-normal text-blue-700 bg-transparent text-gray-900">Logout</button>
        </form>
    </li>
}
else
{
    <li class="">
        <a class="inline-block py-2 px-4 no-underline text-gray-900" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="">
        <a class="inline-block py-2 px-4 no-underline text-gray-900" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
